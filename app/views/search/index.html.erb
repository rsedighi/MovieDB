<h3>Search Results</h3>

<div class="row">
  <% @people.each do |person| %>
  <div class="col-md-2 col-md-1">
    <%= link_to person_path(person.id) do %>
    <%= image_tag("#{@configuration.base_url}w154#{person.profile_path}") if person.profile_path %><br>
    <%= link_to person.name, person_path(person.id) %>
  <% end %>
  </div>
  <% end %>
</div>


<div class="row">
  <% @results.each do |result| %>
  <div class="col-md-6 col-md-3">
    <div class="thumbnail">
      <%= link_to image_tag("http://image.tmdb.org/t/p/w154#{result[2]}"), "http://imdb.com/title/#{result[1]}" %>
      <div class="caption">
        <h3><%= link_to result[0], "http://imdb.com/title/#{result[1]}" %></h3>
      </div>
    </div>
  </div>
  <% end %>
</div>

